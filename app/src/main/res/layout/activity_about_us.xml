<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/about_us_bg"
        >

        <TextView
            android:id="@+id/aboutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="About the Application"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/aboutLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/aboutText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/white_main_logo" />

        <TextView
            android:id="@+id/aboutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/aboutLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="myLPU eStore"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/aboutTitle"
            android:layout_centerHorizontal="true"
            android:text="version 1.0"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutLongText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/aboutVersion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/aboutCopyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright Â© 2022"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/aboutLongText"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/aboutAllRights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Rights Reserved"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_below="@id/aboutCopyright"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>